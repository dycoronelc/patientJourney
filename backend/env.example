# Backend - FastAPI (env example)

# App
APP_NAME=Patient Journey Predictor API
VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database (MySQL local)
DATABASE_URL=mysql+pymysql://patient_user:patient_password@localhost:3306/patient_journey
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Security
SECRET_KEY=change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["*"]

# JWT
JWT_SECRET_KEY=change-this-jwt-secret
JWT_ALGORITHM=HS256

# Medical integration
FHIR_BASE_URL=
DICOM_STORAGE_PATH=./storage/dicom
HL7_FHIR_ENABLED=true

# Analytics
ML_MODEL_PATH=./models
PREDICTION_CACHE_TTL=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Files
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Prometheus
PROMETHEUS_ENABLED=true
METRICS_PORT=9090



